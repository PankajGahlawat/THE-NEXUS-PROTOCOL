# NEXUS PROTOCOL - Production Environment Variables
# Copy to .env and fill in your values

# Domain Configuration
DOMAIN=nexusprotocol.com

# Database
POSTGRES_USER=nexus_user
POSTGRES_PASSWORD=CHANGE_ME_SECURE_PASSWORD_HERE
POSTGRES_DB=nexusprotocol

# Security
JWT_SECRET=CHANGE_ME_GENERATE_WITH_openssl_rand_base64_64
SESSION_SECRET=CHANGE_ME_GENERATE_WITH_openssl_rand_base64_32

# Redis
REDIS_PASSWORD=CHANGE_ME_SECURE_REDIS_PASSWORD

# Email (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Monitoring (optional)
SENTRY_DSN=
ANALYTICS_ID=

# VirtualBox (if using VM control)
VBOXMANAGE_PATH=/usr/bin/VBoxManage
