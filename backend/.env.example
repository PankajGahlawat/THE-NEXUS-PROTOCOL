# NEXUS PROTOCOL - Environment Configuration
# Copy this file to .env and update with your values

# Server Configuration
NODE_ENV=development
PORT=3000
HOST=0.0.0.0
SSH_PROXY_PORT=3002

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://nexus_user:secure_password@localhost:5432/nexusprotocol
DB_HOST=localhost
DB_PORT=5432
DB_NAME=nexusprotocol
DB_USER=nexus_user
DB_PASSWORD=secure_password
DB_SSL=false
DB_POOL_MIN=2
DB_POOL_MAX=20

# Redis Configuration (Optional - for advanced caching)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Security Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-minimum-32-characters
JWT_ALGORITHM=HS256
JWT_EXPIRY=2h
SESSION_SECRET=your-session-secret-key

# CORS Configuration - Allow all LAN connections
CORS_ORIGIN=http://localhost:5173,http://127.0.0.1:5173,http://192.168.1.*:5173,http://10.0.0.*:5173,http://172.16.*:5173
CORS_CREDENTIALS=true

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5
MISSION_ACTION_RATE_LIMIT=5

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_CONNECTIONS_PER_IP=5
WS_RATE_LIMIT_WINDOW=60000
WS_RATE_LIMIT_MAX=30

# Performance Configuration
MAX_REQUEST_SIZE=10mb
COMPRESSION_LEVEL=6
STATIC_CACHE_MAX_AGE=86400
LRU_CACHE_MAX_SIZE=1000

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/nexus-protocol.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Game Configuration
MISSION_CLEANUP_DAYS=30
SESSION_CLEANUP_INTERVAL=3600000
CACHE_TTL_MISSIONS=300000
CACHE_TTL_ABILITIES=30000
CACHE_TTL_SCORES=60000

# Monitoring Configuration
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true
PERFORMANCE_MONITORING=true

# Development Configuration (Development only)
DEBUG_MODE=false
HOT_RELOAD=true
MOCK_AUTHENTICATION=false
DISABLE_RATE_LIMITING=false

# Production Configuration (Production only)
TRUST_PROXY=true
SECURE_COOKIES=true
HTTPS_REDIRECT=true
HSTS_MAX_AGE=31536000

# External Services (Optional)
ANALYTICS_API_KEY=
MONITORING_SERVICE_URL=
ERROR_REPORTING_DSN=

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=7
BACKUP_S3_BUCKET=
BACKUP_S3_REGION=

# Email Configuration (Optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@nexusprotocol.com

# Feature Flags
ENABLE_ACHIEVEMENTS=true
ENABLE_LEADERBOARDS=true
ENABLE_ANALYTICS=true
ENABLE_REAL_TIME_UPDATES=true
ENABLE_MISSION_REPLAY=false