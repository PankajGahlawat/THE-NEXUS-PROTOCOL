# NEXUS PROTOCOL - Frontend Environment Configuration
# Copy this file to .env.local and update the values

# API Configuration
VITE_API_URL=http://localhost:3000
VITE_WS_URL=ws://localhost:3000

# Environment
VITE_ENV=development

# Feature Flags
VITE_ENABLE_TRAILER=true
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG_MODE=false

# Performance Configuration
VITE_ANIMATION_PERFORMANCE_MODE=auto
VITE_REDUCE_MOTION_DEFAULT=false

# Development Configuration
VITE_MOCK_API=false
VITE_SKIP_TRAILER=false
VITE_AUTO_LOGIN=false

# Production Configuration (for production builds)
# VITE_API_URL=https://your-production-api.com
# VITE_WS_URL=wss://your-production-api.com
# VITE_ENV=production